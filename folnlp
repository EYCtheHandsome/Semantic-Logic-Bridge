#!/usr/bin/env python3
"""Executable wrapper for the folnlp command-line interface."""

from __future__ import annotations

import sys
from pathlib import Path


def _ensure_package_on_path() -> None:
    """Add the local src directory so the package resolves without installation."""
    repo_root = Path(__file__).resolve().parent
    src_dir = repo_root / "src"
    if src_dir.is_dir():
        sys.path.insert(0, str(src_dir))


def main() -> int:
    _ensure_package_on_path()
    from folnlp.cli import main as cli_main  # import after path tweak

    return cli_main()


if __name__ == "__main__":
    sys.exit(main())
